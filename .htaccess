RewriteEngine On

# Редіректи зі старих посилань на нові (301 - постійний редірект для SEO)
RewriteRule ^about\.html$ / [R=301,L]
RewriteRule ^about$ / [R=301,L]
RewriteRule ^milkladder\.html$ /molochna-drabyna [R=301,L]
RewriteRule ^milkladder$ /molochna-drabyna [R=301,L]
RewriteRule ^payment_rules\.html$ /appointment [R=301,L]
RewriteRule ^payment_rules$ /appointment [R=301,L]
RewriteRule ^privacy_policy\.html$ /privacy-policy [R=301,L]
RewriteRule ^privacy_policy$ /privacy-policy [R=301,L]
RewriteRule ^user_agreement\.html$ /terms-of-use [R=301,L]
RewriteRule ^user_agreement$ /terms-of-use [R=301,L]

# Приховує .html з URL (редірект з .html на без .html)
RewriteCond %{THE_REQUEST} \s/+([^.\s?]+)\.html[\s?] [NC]
RewriteRule ^ /%1? [R=301,L]

# Приховує index.html
RewriteRule ^index\.html$ / [R=301,L]

# Дозволяє заходити без .html (внутрішня обробка)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]